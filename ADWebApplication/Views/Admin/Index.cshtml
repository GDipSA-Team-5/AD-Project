@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4 p-4 bg-primary text-white rounded shadow-sm">
        <div>
            <h1 class="h2 fw-bold mb-1">Admin Dashboard</h1>
            <p class="mb-0 opacity-75">Welcome, Administrator</p>
        </div>
        <div class="text-end">
            <h6 class="mb-0 text-uppercase opacity-75">System Status</h6>
            <h4 class="mb-0"><i class="bi bi-broadcast me-2"></i>Online</h4>
        </div>
    </div>

    <div class="row g-4">
        <!-- Placeholder for future admin features -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center p-5">
                    <i class="bi bi-people display-4 text-primary mb-3"></i>
                    <h4 class="fw-bold">Manage Users</h4>
                    <p class="text-muted">View and manage collector accounts.</p>
                    <button class="btn btn-outline-primary mt-2">View Users</button>
                </div>
            </div>
        </div>
         <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center p-5">
                    <i class="bi bi-truck display-4 text-primary mb-3"></i>
                    <h4 class="fw-bold">Route Optimization</h4>
                    <p class="text-muted">Manage and plan collection routes.</p>
                    <button class="btn btn-outline-primary mt-2">Manage Routes</button>
                </div>
            </div>
        </div>
         <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center p-5">
                    <i class="bi bi-bar-chart display-4 text-primary mb-3"></i>
                    <h4 class="fw-bold">Reports</h4>
                    <p class="text-muted">View system analytics and collection data.</p>
                    <button class="btn btn-outline-primary mt-2">View Reports</button>
                </div>
            </div>
        </div>
    </div>
</div>
