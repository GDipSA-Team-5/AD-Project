@model ADWebApplication.Models.CollectionConfirmationVM

@{
    ViewData["Title"] = "Collection Confirmed";
}

<div class="container py-4">
    <div class="card shadow-sm border-success">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">
                <i class="bi bi-check-circle-fill me-2"></i>
                Collection Confirmed Successfully!
            </h5>
        </div>
        <div class="card-body">
            <div class="alert alert-success">
                <h6>Collection Details:</h6>
                <p><strong>Location:</strong> @Model.LocationName</p>
                <p><strong>Bin ID:</strong> @Model.BinId</p>
                <p><strong>Weight Collected:</strong> @Model.CollectedWeightKg kg</p>
                <p><strong>Time:</strong> @Model.CollectionTime.ToString("dd MMM yyyy HH:mm")</p>
            </div>

            <div class="d-flex gap-2 mt-3">
                <a asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-house"></i> Back to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>
