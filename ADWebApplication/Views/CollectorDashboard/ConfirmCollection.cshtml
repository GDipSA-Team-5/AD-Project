@model ADWebApplication.Models.CollectionConfirmationVM

@{
    ViewData["Title"] = "Confirm Collection";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Confirm Collection</h5>
        </div>
        <div class="card-body">
            <form asp-action="ConfirmCollection" method="post">
                <input type="hidden" asp-for="PointId" />
                
                <div class="mb-3">
                    <label class="form-label"><strong>Location:</strong></label>
                    <p>@Model.LocationName</p>
                    <p class="text-muted">@Model.Address</p>
                </div>

                <div class="mb-3">
                    <label class="form-label"><strong>Bin ID:</strong></label>
                    <p>@Model.BinId</p>
                </div>

                <div class="mb-3">
                    <label asp-for="CollectedWeightKg" class="form-label"></label>
                    <input asp-for="CollectedWeightKg" class="form-control" type="number" step="0.1" required />
                    <span asp-validation-for="CollectedWeightKg" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Confirm Collection
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
