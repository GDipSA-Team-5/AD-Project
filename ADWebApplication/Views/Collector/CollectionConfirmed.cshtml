@model ADWebApplication.Models.CollectionConfirmationVM

@{
    ViewData["Title"] = "Collection Confirmed";
}

<div class="container py-5 text-center">
    <div class="card border-0 shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-body p-5">
            <!-- Success Icon -->
            <div class="mb-4">
                <div class="rounded-circle bg-success bg-opacity-10 d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                    <i class="bi bi-check-lg text-success" style="font-size: 2.5rem;"></i>
                </div>
            </div>

            <h2 class="fw-bold mb-3">Collection Confirmed!</h2>
            <p class="text-muted mb-4">The collection has been recorded successfully.</p>

            <!-- Details Card -->
            <div class="bg-light rounded p-4 mb-4 text-start">
                <div class="row">
                    <div class="col-6 mb-3">
                        <small class="text-muted d-block">Location</small>
                        <span class="fw-bold">@Model.LocationName</span>
                    </div>
                    <div class="col-6 mb-3">
                        <small class="text-muted d-block">Bin ID</small>
                        <span class="fw-bold">@Model.BinId</span>
                    </div>
                    <div class="col-6">
                        <small class="text-muted d-block">Weight</small>
                        <span class="fw-bold">@Model.CollectedWeightKg kg</span>
                    </div>
                    <div class="col-6">
                        <small class="text-muted d-block">Time</small>
                        <span class="fw-bold">@Model.CollectionTime.ToString("h:mm tt")</span>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="d-flex justify-content-center gap-3">
                <a asp-action="Index" class="btn btn-primary px-4">Back to Dashboard</a>
                <a asp-action="RouteDetails" asp-route-id="R-SG-101" class="btn btn-outline-secondary px-4">Next Collection</a>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
