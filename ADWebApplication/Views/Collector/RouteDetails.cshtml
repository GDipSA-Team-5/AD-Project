@model ADWebApplication.Models.CollectorRoute

@{
    ViewData["Title"] = "Route Details";
    int completedCount = Model.CollectionPoints.Count(p => p.Status == "Collected");
    int totalCount = Model.CollectionPoints.Count;
    int percentage = (int)((double)completedCount / totalCount * 100);
}

<div class="container py-4">
    <!-- Header -->
    <div class="bg-primary text-white p-4 rounded-top d-flex justify-content-between align-items-center">
        <div>
            <h2 class="fw-bold mb-1">@Model.RouteName Details</h2>
            <p class="mb-0 opacity-75">@Model.Zone • @Model.TotalPoints Collection Points</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-light">Back to Dashboard</a>
    </div>

    <!-- Progress Section -->
    <div class="card border-0 shadow-sm rounded-0 rounded-bottom mb-4">
        <div class="card-body">
            <h5 class="card-title fw-bold">Route Progress</h5>
            <div class="progress mb-3" style="height: 10px;">
                <div class="progress-bar bg-primary" role="progressbar" style="width: @percentage%" aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <div class="d-flex justify-content-between text-center">
                <div>
                    <h4 class="text-success fw-bold mb-0">@completedCount</h4>
                    <span class="text-muted small">Completed</span>
                </div>
                <div>
                    <h4 class="text-primary fw-bold mb-0">1</h4>
                    <span class="text-muted small">In Progress</span>
                </div>
                <div>
                    <h4 class="text-secondary fw-bold mb-0">@(totalCount - completedCount - 1)</h4>
                    <span class="text-muted small">Pending</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Collection Points List -->
    <h4 class="fw-bold mb-3">Collection Points</h4>
    <div class="vstack gap-3">
        @{
            int index = 1;
            var nextPendingPoint = Model.CollectionPoints.FirstOrDefault(p => p.Status == "Pending");
        }
        @foreach (var point in Model.CollectionPoints.OrderByDescending(p => p.Status == "Collected").ThenBy(p => p.PointId))
        {
            @if (point.Status == "Collected")
            {
                // Completed Item
                <div class="card border-success border-1 shadow-sm bg-light">
                    <div class="card-body d-flex align-items-center">
                        <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                            <i class="bi bi-check-lg"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="fw-bold mb-0 text-success">Collection Point #@index</h6>
                            <small class="text-muted">Completed at @point.CollectedAt?.ToShortTimeString() • Weight: @point.CollectedWeightKg kg</small>
                        </div>
                        <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill">Completed</span>
                    </div>
                </div>
            }
            else if (point == nextPendingPoint) // Making the first pending item "Active"
            {
                // Active Item (In Progress)
                <div class="card border-primary border-2 shadow">
                    <div class="card-body d-flex align-items-center">
                        <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px; font-weight:bold;">
                            @index
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="fw-bold mb-1">@point.LocationName</h5>
                            <div class="text-muted small">@point.Address • Est. @point.EstimatedTimeMins mins away</div>
                        </div>
                        <div class="d-flex gap-2">
                             <a asp-action="ConfirmCollection" asp-route-id="@point.PointId" class="btn btn-primary px-3">Collect</a>
                            <a href="https://www.google.com/maps/search/?api=1&query=@Uri.EscapeDataString(point.Address)" target="_blank" class="btn btn-outline-primary px-3">Navigate</a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                // Pending Item
                <div class="card border-0 shadow-sm opacity-75">
                     <div class="card-body d-flex align-items-center">
                        <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px; font-weight:bold;">
                            @index
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="fw-bold mb-0">Collection Point #@index</h6>
                            <small class="text-muted">Scheduled for later</small>
                        </div>
                        <span class="badge bg-secondary bg-opacity-10 text-secondary px-3 py-2 rounded-pill">Pending</span>
                    </div>
                </div>
            }
            index++;
        }
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
