@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_DashboardLayout";
}

    <!-- Dashboard Header -->
    <div class="dashboard-header">
        <div class="container-fluid px-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="mb-1">Overview Dashboard</h1>
                    <p class="text-muted mb-0">Command summary for operational planning and system performance</p>
                </div>
                
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container-fluid px-4">
        <div class="row">
            <!-- Left Column: Operational Readiness & Today's Operations -->
            <div class="col-lg-6">
                <!-- Operational Readiness -->
                <h4 class="mb-3">Operational Readiness</h4>
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <div class="stat-card">
                            <div class="icon-wrapper blue">
                                <i class="bi bi-box-seam fs-4"></i>
                            </div>
                            <h2 class="stat-number">30</h2>
                            <p class="stat-label">Active Bins</p>
                            <p class="stat-sublabel">of 718 NEA bins</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="stat-card alert-card">
                            <div class="icon-wrapper red">
                                <i class="bi bi-exclamation-triangle fs-4"></i>
                            </div>
                            <div class="badge bg-danger position-absolute top-0 end-0 m-3">Alert</div>
                            <h2 class="stat-number">2</h2>
                            <p class="stat-label">High-Risk Unscheduled</p>
                            <p class="stat-sublabel">Urgent action required</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="stat-card">
                            <div class="icon-wrapper green">
                                <i class="bi bi-check-circle fs-4"></i>
                            </div>
                            <h2 class="stat-number">4</h2>
                            <p class="stat-label">Scheduled Today</p>
                            <p class="stat-sublabel">2 routes active</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="stat-card">
                            <div class="icon-wrapper purple">
                                <i class="bi bi-calendar-event fs-4"></i>
                            </div>
                            <h2 class="stat-number">12</h2>
                            <p class="stat-label">Upcoming (3 Days)</p>
                            <p class="stat-sublabel">6 routes planned</p>
                        </div>
                    </div>
                </div>

                <!-- Today's Operations -->
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="mb-0">Today's Operations</h4>
                    <a href="#" class="text-primary text-decoration-none">
                        View All Routes <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
                <div class="route-card">
                    <div class="d-flex align-items-center mb-3">
                        <div class="route-icon me-3">
                            <i class="bi bi-geo-alt-fill"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-0">Route R0A</h6>
                            <small class="text-muted">Officer: Alex Chen • 2 bins</small>
                        </div>
                        <span class="badge status in-progress">
                            <i class="bi bi-clock me-1"></i> In Progress
                        </span>
                    </div>
                    <div class="progress">
                        <div class="progress-bar bg-primary" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <div class="text-end mt-2">
                        <small class="text-muted">50%</small>
                    </div>
                </div>
                <div class="route-card">
                    <div class="d-flex align-items-center mb-3">
                        <div class="route-icon me-3">
                            <i class="bi bi-geo-alt-fill"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-0">Route R0B</h6>
                            <small class="text-muted">Officer: Sarah Lee • 2 bins</small>
                        </div>
                        <span class="badge status pending">
                            <i class="bi bi-clock me-1"></i> Pending
                        </span>
                    </div>
                    <div class="progress">
                        <div class="progress-bar bg-secondary" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <div class="text-end mt-2">
                        <small class="text-muted">0%</small>
                    </div>
                </div>
            </div>

            <!-- Right Column: Alerts & Notifications -->
            <div class="col-lg-6">
                <h4 class="mb-3">Alerts & Notifications</h4>
                
                <div class="alert-box danger">
                    <div class="d-flex">
                        <div class="alert-icon me-3">
                            <i class="bi bi-exclamation-circle"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">High overflow risk predicted</h6>
                            <p class="mb-2 text-muted small">BIN-1203 and BIN-4567 are high-risk and not yet scheduled for collection</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">30 min ago</small>
                                <a href="#" class="text-danger text-decoration-none small">
                                    View Bin Predictions <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="alert-box warning">
                    <div class="d-flex">
                        <div class="alert-icon me-3">
                            <i class="bi bi-exclamation-triangle"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">Predictions need refresh</h6>
                            <p class="mb-2 text-muted small">2 bins have new collection cycles detected and require ML prediction updates</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">1 hour ago</small>
                                <a href="#" class="text-warning text-decoration-none small">
                                    View Bin Predictions <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="alert-box warning">
                    <div class="d-flex">
                        <div class="alert-icon me-3">
                            <i class="bi bi-exclamation-triangle"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">Route awaiting approval</h6>
                            <p class="mb-2 text-muted small">Route R2A (4 bins) is ready for review and approval</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">2 hours ago</small>
                                <a href="#" class="text-warning text-decoration-none small">
                                    View Route Planning <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="alert-box info">
                    <div class="d-flex">
                        <div class="alert-icon me-3">
                            <i class="bi bi-stars"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">Route optimization opportunity</h6>
                            <p class="mb-2 text-muted small">Sector 3 and Sector 12 bins can be combined into a single efficient route</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">3 hours ago</small>
                                <a href="#" class="text-primary text-decoration-none small">
                                    Optimize Routes <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="alert-box warning">
                    <div class="d-flex">
                        <div class="alert-icon me-3">
                            <i class="bi bi-exclamation-triangle"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">Low participation in Zone B</h6>
                            <p class="mb-2 text-muted small">E-waste collection requests down 15% in Zone B over last 7 days</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">5 hours ago</small>
                                <a href="#" class="text-warning text-decoration-none small">
                                    View Incentives <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- System Performance & Participation -->
        <div class="row mt-5">
            <div class="col-12">
                <h4 class="mb-3">System Performance & Participation</h4>
            </div>
            
            <!-- Metrics -->
            <div class="col-md-4 mb-3">
                <div class="metric-card">
                    <p class="text-muted mb-1">Completed Collections (MTD)</p>
                    <div class="d-flex align-items-baseline">
                        <h3 class="metric-value mb-0">167</h3>
                        <span class="metric-change ms-2">
                            <i class="bi bi-arrow-up"></i> +12.5%
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="metric-card">
                    <p class="text-muted mb-1">E-Waste Collected (MTD)</p>
                    <div class="d-flex align-items-baseline">
                        <h3 class="metric-value mb-0">1,069 kg</h3>
                        <span class="metric-change ms-2">
                            <i class="bi bi-arrow-up"></i> +8.3%
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="metric-card">
                    <p class="text-muted mb-1">Collection Completion Rate</p>
                    <div class="d-flex align-items-baseline">
                        <h3 class="metric-value mb-0">92.7%</h3>
                        <span class="metric-change ms-2">
                            <i class="bi bi-arrow-up"></i> +2.1%
                        </span>
                    </div>
                </div>
            </div>

            <!-- Charts -->
            <div class="col-lg-7 mb-4">
                <div class="chart-container">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="mb-0">Collection Trends (Last 30 Days)</h5>
                        <div>
                            <span class="badge bg-primary me-2">Planned</span>
                            <span class="badge bg-success">Completed</span>
                        </div>
                    </div>
                    <canvas id="collectionChart" height="5"></canvas>
                </div>
            </div>

            <div class="col-lg-5 mb-3">
                <div class="chart-container">
                    <h5 class="mb-4">E-Waste Category Distribution</h5>
                    <div class="row">
                        <div class="col-6 mb-4">
                            <canvas id="categoryChart" height="200"></canvas>
                        </div>
                        <div class="col-6">
                            <div class="category-item">
                                <div class="d-flex align-items-center">
                                    <div class="category-icon me-2" style="background: #e7f1ff; color: #0d6efd;">
                                        <i class="bi bi-phone"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block">Electronics</small>
                                        <strong>342 items • 32.0%</strong>
                                    </div>
                                </div>
                            </div>
                            <div class="category-item">
                                <div class="d-flex align-items-center">
                                    <div class="category-icon me-2" style="background: #d4edda; color: #28a745;">
                                        <i class="bi bi-battery"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block">Batteries</small>
                                        <strong>289 items • 27.0%</strong>
                                    </div>
                                </div>
                            </div>
                            <div class="category-item">
                                <div class="d-flex align-items-center">
                                    <div class="category-icon me-2" style="background: #fff3cd; color: #ffc107;">
                                        <i class="bi bi-usb-plug"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block">Cables</small>
                                        <strong>193 items • 18.1%</strong>
                                    </div>
                                </div>
                            </div>
                            <div class="category-item">
                                <div class="d-flex align-items-center">
                                    <div class="category-icon me-2" style="background: #f3e8ff; color: #9333ea;">
                                        <i class="bi bi-headphones"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block">Accessories</small>
                                        <strong>156 items • 14.6%</strong>
                                    </div>
                                </div>
                            </div>
                            <div class="category-item">
                                <div class="d-flex align-items-center">
                                    <div class="category-icon me-2" style="background: #e9ecef; color: #6c757d;">
                                        <i class="bi bi-box"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block">Others</small>
                                        <strong>89 items • 8.3%</strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Help Button -->
    <button class="help-button">
        <i class="bi bi-question-lg"></i>
    </button>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Collection Trends Chart
        const collectionCtx = document.getElementById('collectionChart').getContext('2d');
        new Chart(collectionCtx, {
            type: 'bar',
            data: {
                labels: Array.from({length: 30}, (_, i) => `Day ${i + 1}`),
                datasets: [
                    {
                        label: 'Planned',
                        data: [12, 14, 10, 12, 15, 14, 11, 13, 14, 12, 16, 13, 12, 14, 13, 11, 12, 14, 15, 13, 12, 14, 15, 11, 14, 12, 14, 15, 11, 12],
                        backgroundColor: '#0d6efd',
                        borderRadius: 4
                    },
                    {
                        label: 'Completed',
                        data: [11, 14, 9, 11, 15, 13, 11, 13, 13, 11, 14, 12, 11, 13, 12, 10, 11, 13, 14, 12, 11, 13, 14, 10, 13, 11, 13, 14, 10, 12],
                        backgroundColor: '#28a745',
                        borderRadius: 4
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 16
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });

        // Category Distribution Chart
        const categoryCtx = document.getElementById('categoryChart').getContext('2d');
        new Chart(categoryCtx, {
            type: 'doughnut',
            data: {
                labels: ['Electronics', 'Batteries', 'Cables', 'Accessories', 'Others'],
                datasets: [{
                    data: [32.0, 27.0, 18.1, 14.6, 8.3],
                    backgroundColor: ['#0d6efd', '#28a745', '#ffc107', '#9333ea', '#6c757d'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                cutout: '65%'
            }
        });
    </script>
